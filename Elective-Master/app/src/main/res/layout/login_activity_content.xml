<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/pku_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@mipmap/pku_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="219dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:text="elective master"
        android:textAlignment="center"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_id"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:hint="密码"
        android:inputType="textPassword"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/student_id"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="学号"
        android:inputType="numberSigned"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/student_id"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@mipmap/user" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="27dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/password"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/password"
        app:srcCompat="@mipmap/lock" />

    <CheckBox
        android:id="@+id/rem_password"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/password"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="73dp"
        android:text="记住密码"
        android:textSize="18sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="75dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/password"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="80dp"
        android:background="#b40605"
        android:text="登陆"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />


</RelativeLayout>